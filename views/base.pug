doctype html
html 
    head 
        meta(charset="UTF-8")
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='css/style.css')
        link(rel='shortcut icon' type='image/png' href='img/gmFavi.png')      
        link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')    
        title Natours | Exciting tours for adventurous people
 
    body
    // HEADER    
    header.header
      nav.nav.nav--tours
        a.nav__el(href='#') All Tours

        form.nav__search
          button.nav__search-btn
            svg
              use(link:href="img/icons.svg#icon-search") 
          input.nav__search-input(type='text'
            placeholder='Search tours')
           
      .header__logo
        img(src='img/MGWeb_vertclair.png' alt='GMWeb logo')    

      nav.nav.nav--user
        //- a.nav__el(href='#') My bookings
        //- a.nav__el(href='#')
        //-   img.nav__user-img(src='img/users/user-1.jpg' alt='User photo')
        //-   span Jonas
        button.nav__el Log in
        button.nav__el.nav__el--cta Sign up 

    // CONTENT
    section.overview
        h1= tour

    // FOOTER
    .footer
      .footer__logo
        img(src='img/logo-green.png' alt='Natours logo')
      
      ul.footer__nav
        li: a(href='#') About us
        li: a(href='#') Download apps
        li: a(href='#') Become a guide
        li: a(href='#') Careers
        li: a(href='#') Contact
      
